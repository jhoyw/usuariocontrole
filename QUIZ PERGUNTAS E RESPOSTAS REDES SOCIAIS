			printf (" EM QUE ANO O TWITTER FOI FUNDADO   ?\n");
			printf ("-------------------------------------------------------------------------------\n");
			printf ("A) 2006 \n");
			printf ("B) 2007 \n");
			printf ("C) 2015 \n");
			printf ("D) 2010 \n");
			printf ("-------------------------------------------------------------------------------\n");
			printf ("Qual a resposta certa?\n");
			scanf ("%s",&resp);
			if ((resp=='a')||(resp=='A'))
			{
				printf ("Resposta correta\n");
				certo_3++;
			}
			else
			{
				printf ("Resposta errada\n");
				printf ("Resposta correta: Letra \"A\"\n");
				errado_3++;
			}
			printf ("-------------------------------------------------------------------------------\n");
			getchar();printf ("Pressione \"enter\" para continuar...");
			getchar();system ("cls");
			printf ("*----------------------------------*\n");
			printf ("|  Pergunta n. %.2d - Nivel Dificil  |\n",contp_3++);
			printf ("*----------------------------------*\n\n");
			printf (" QUAL E A COR DO ICONE DO TWITTER ? \n");
			printf ("-------------------------------------------------------------------------------\n");
			printf ("A) AMARELO \n");
			printf ("B) VERDE \n");
			printf ("C) AZUL \n");
			printf ("D) ROXO  \n");
			printf ("-------------------------------------------------------------------------------\n");
			printf ("Qual a resposta certa?\n");
			scanf ("%s",&resp);
			if ((resp=='c')||(resp=='C'))
			{
				printf ("Resposta correta\n");
				certo_3++;
			}
			else
			{
				printf ("Resposta errada\n");
				printf ("Resposta correta: Letra \"C\"\n");
				errado_3++;
			}
			printf ("-------------------------------------------------------------------------------\n");
			getchar();printf ("Pressione \"enter\" para continuar...");
			getchar();system ("cls");
			printf ("*----------------------------------*\n");
			printf ("|  Pergunta n. %.2d - Nivel Dificil  |\n",contp_3++);
			printf ("*----------------------------------*\n\n");
			printf (" QUAL E O MASCOTE DO TWITTER  \n");
			printf ("-------------------------------------------------------------------------------\n");
			printf ("A)   MACACO  \n");
			printf ("B)   PASSARO  \n");
			printf ("C)   CACHORRO \n");
			printf ("D)   GATO \n");
			printf ("-------------------------------------------------------------------------------\n");
